---
const { MinLilleKlub } = Astro.props;
---

<article>
  <h2>{MinLilleKlub.Navn}</h2>
  <p>Alder: {MinLilleKlub.Alder} alder</p>
  <h4>Elsker at:</h4>
  <p>{MinLilleKlub.Hobby}</p>
  <button onclick={`location.href='/members/${MinLilleKlub.id}'`}
    >Bes√∏g profil</button
  >
</article>

<style>
  article {
    background: rgb(117, 117, 117);
    border: 2px solid #000000;
    border-radius: 12px;
    padding: 1.5rem;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  article:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    border-color: #000000;
  }

  article h4 {
    color: white;
    margin-top: 20px;
    margin-bottom: -5px;
  }

  article h2 {
    font-size: 1.5rem;
    color: #ffffff;
    margin: 0.5rem 0;
  }

  article p {
    font-size: 1rem;
    color: #ffffff;
    margin: 0.5rem 0;
  }

  article button {
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    color: rgb(0, 0, 0);
    background-color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: bold;
  }

  article button:hover {
    background-color: #000000;
    color: white;
  }
</style>
